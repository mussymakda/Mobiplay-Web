  <script type="text/javascript">
    $('.lang-menu a').click(function(){
      $('.lang-menu a.active').removeClass('active');
      $(this).addClass('active');
    });

    // Handle form submission with loading state
    $('#landingSignupForm, #landingSignupFormBottom').on('submit', function(e) {
      const form = $(this);
      const submitBtn = form.find('button[type="submit"]');
      const normalText = submitBtn.find('.normal-text');
      const loadingText = submitBtn.find('.loading-text');
      
      // Show loading state
      submitBtn.prop('disabled', true);
      normalText.addClass('d-none');
      loadingText.removeClass('d-none');
      
      // Clear previous error messages
      form.find('.error-message').addClass('d-none').text('');

      // Submit form normally - will redirect on success
      return true;
    });
  </script>
